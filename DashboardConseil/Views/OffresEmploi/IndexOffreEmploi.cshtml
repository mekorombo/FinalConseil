@model IEnumerable<DashboardConseil.Models.OffreEmploi>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Liste des offres d'emploi";
}

<h1 class="mb-4 text-dark text-center">Liste des offres d'emploi</h1>

<a class="btn bg-gradient-primary mb-4" asp-action="CreateOffreEmploi">
    <i class="material-symbols-rounded">add</i> Créer une nouvelle offre
</a>

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var offre in Model)
        {
            <div class="col">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@offre.Titre</h5>
                        <p class="card-text text-muted small">
                            <strong>Entreprise :</strong> @offre.Entreprise <br />
                            <strong>Lieu :</strong> @offre.Lieu <br />
                            <strong>Date de publication :</strong> @offre.DatePublication.ToString("dd/MM/yyyy") <br />
                        </p>
                        <p class="card-text text-truncate" title="@offre.Description">
                            @offre.Description
                        </p>
                        <p class="card-text text-truncate small text-secondary" title="@offre.MinimumQualifications">
                            <strong>Qualifications minimales :</strong> @offre.MinimumQualifications
                        </p>
                        <p class="card-text text-truncate small text-secondary" title="@offre.PreferredQualifications">
                            <strong>Qualifications minimales :</strong> @offre.PreferredQualifications
                        </p>
                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="Edit" asp-route-id="@offre.Id" class="btn btn-sm btn-warning">
                                <i class="material-symbols-rounded">edit</i> Modifier
                            </a>
                            <a asp-action="Delete" asp-route-id="@offre.Id" class="btn btn-sm btn-danger">
                                <i class="material-symbols-rounded">delete</i> Supprimer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
