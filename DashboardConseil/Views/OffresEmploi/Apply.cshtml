@model DashboardConseil.Models.OffreEmploi
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulaire et Offre</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e7d4fa;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .form-section {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .job-card {
            background-color: #f4eafc;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    </style>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["Message"]
                    </div>
                }
               
                <h1 class="mb-4">Envoyez votre candidature <strong>dès maintenant !</strong></h1>
                <div class="form-section">
                    <form action="/OffresEmploi/Soumettre" method="post" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <!-- Hidden input for the OffreId -->
                            <input type="hidden" name="id" value="@Model.Id" />

                            <div class="col-md-6">
                                <label for="prenom" class="form-label">Prénom</label>
                                <input type="text" class="form-control" id="prenom" name="prenom" placeholder="Votre prénom" required>
                            </div>
                            <div class="col-md-6">
                                <label for="nom" class="form-label">Nom</label>
                                <input type="text" class="form-control" id="nom" name="nom" placeholder="Votre nom" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="contactezmoi@vite.com" required>
                        </div>

                        <div class="mb-3">
                            <label for="cv" class="form-label">CV</label>
                            <input type="file" class="form-control" id="cv" name="cv" accept=".pdf, .doc, .docx, .odt, .rtf, .jpg, .png" required>
                            <small class="text-muted">Poids max. 2Mo | Formats : .pdf, .doc, .docx, .odt, .rtf, .jpg ou .png</small>
                        </div>

                        <div class="mb-3">
                            <label for="message" class="form-label">Personnaliser mon message au recruteur</label>
                            <textarea class="form-control" id="message" name="message" rows="3" placeholder="Votre message (facultatif)"></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">Continuer</button>

                        <p class="text-muted text-center mt-3" style="font-size: 0.9rem;">
                            En cliquant sur "Continuer", vous acceptez les <a href="#" style="text-decoration: none; color: #6c63ff;">CGU</a> et <a href="#" style="text-decoration: none; color: #6c63ff;">celles de notre client</a> et déclarez avoir pris connaissance de la <a href="#" style="text-decoration: none; color: #6c63ff;">politique de protection des données</a>.
                        </p>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <div class="job-card">
                    <h1>@Model.Titre</h1>
                    <p><strong>Entreprise:</strong> @Model.Entreprise</p>
                    <p><strong>Lieu:</strong> @Model.Lieu</p>
                    <p><strong>Description:</strong></p>
                    <p>@Model.Description</p>
                    <button class="btn btn-primary"><a href="/offre" class="text-white">Voir Les offres</a></button>
                </div>
            </div>
        </div>
    </div>
    <script>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="sweetalert2.min.js"></script>
    <link rel="stylesheet" href="sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
