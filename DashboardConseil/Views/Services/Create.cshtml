@model DashboardConseil.Models.Service

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Chemin vers le layout partagé
    ViewData["Title"] = "Créer un service";
}

<h1 class="mb-4 text-dark">Créer un service</h1>

<div class="card shadow-lg p-4 mb-5 bg-body-tertiary rounded">
    <form asp-action="Create">
        <div class="form-group mb-3">
            <label asp-for="Nom" class="form-label text-dark fw-bold">Nom du service</label>
            <input asp-for="Nom" class="form-control border border-dark" placeholder="Entrez le nom du service" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label text-dark fw-bold">Description</label>
            <textarea asp-for="Description" class="form-control border border-dark" placeholder="Décrivez le service" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="material-symbols-rounded">arrow_back</i> Retour
            </a>
            <button type="submit" class="btn bg-gradient-primary">
                <i class="material-symbols-rounded">save</i> Enregistrer
            </button>
        </div>
    </form>
</div>
